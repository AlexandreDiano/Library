<p id="notice"><%= notice %></p>
<div class="container" align="center">
  <h1>User Types</h1><br>
  <%= link_to 'New User Type', new_user_type_path, class: 'btn btn-success text-light btn-sm' %>
</div>
<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Title</th>
    <th colspan="1"></th>
    <th colspan="1"></th>
    <th colspan="1"></th>
    <th colspan="1"></th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <% @user_types.each do |type| %>
      <td><h6><%= type.id %></h6></td>
      <td><h6><%= type.title %></h6></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= link_to 'Show', type, class: 'btn btn-primary text-light btn-sm' %></td>
      <td><%= link_to 'Edit', edit_user_type_path(type), class: 'btn btn-primary text-light btn-sm' %></td>
      <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-light btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

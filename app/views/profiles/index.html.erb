<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>Name</th>
      <th>Age</th>
      <th>Zip code</th>
      <th>Debit</th>
      <th>Borrows amout</th>
      <th>Books returned</th>
      <th>References</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.cpf %></td>
        <td><%= profile.name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.zip_code %></td>
        <td><%= profile.debit %></td>
        <td><%= profile.borrows_amout %></td>
        <td><%= profile.books_returned %></td>
        <td><%= profile.references %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>
<h1>Loans</h1>
<%= link_to 'New Loan', new_loan_path %>
<table>
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Returned?</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><h6><%= loan.book.name %></h6></td>
        <td><h6><%= loan.profile.name %></h6></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
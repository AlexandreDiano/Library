<%= form_with(model: book) do |form| %>

  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <form>
    <div class="row g-2">
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.text_field :name, class: 'form-control' %>
          <%= form.label :name, class: 'form-label' %>
        </div>
      </div>
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.text_field :genre, class: 'form-control' %>
          <%= form.label :genre, class: 'form-label' %>
        </div>
      </div>
    </div>

    <div class="row g-5">
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.number_field :total_amount, class: 'form-control' %>
          <%= form.label :total_amount, class: 'form-label'  %>
        </div>
      </div>
      <div class="col">
          <div class="btn-group">
            <button type="button" class="btn btn-primary">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;There are Available books? &nbsp; &nbsp;</button>
            <button
              type="button"
              class="btn btn-primary dropdown-toggle dropdown-toggle-split"
              data-mdb-toggle="dropdown"
              aria-expanded="false"
            >
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Yes</a></li>
              <li><a class="dropdown-item" href="#">No</a></li>
            </ul>
          </div>
      </div>
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.text_field :publishing_company, class: 'form-control' %>
          <%= form.label :publishing_company, class: 'form-label' %>
        </div>
      </div>
    </div>

    <div class="row g-2">
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.text_field :language, class: 'form-control' %>
          <%= form.label :language, class: 'form-label'  %>
        </div>
      </div>
      <div class="col">
        <div class="form-outline mb-4">
          <%= form.text_field :author, class: 'form-control' %>
          <%= form.label :author, class: 'form-label'  %>
        </div>
      </div>
    </div>

    <div class="row g-2">

    </div>
    <div class="form-outline mb-4">
      <%= form.text_area :summary, class: 'form-control' %>
      <%= form.label :summary, class: 'form-label' %>
    </div>
    <%= form.submit class: 'btn btn-primary btn-block mb-4' %>
  </form>
</div>

<% end %>
